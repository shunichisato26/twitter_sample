<h1>ホーム</h1>

<hr>
<h2>つぶやく</h2>
<%= form_for @tweet do |f| %>
  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>
<hr>
<h2>つぶやき一覧</h2>
<% @tweets.each do |tweet| %>
<hr>
  <br><a href="/users/<%= tweet.user.id %>"><%= tweet.user.email %></a></br>
  <br><a href="/tweets/<%= tweet.id %>"><%= tweet.content %></a>
  (<%= tweet.liked_users.count %>)</br>
<% end %>
